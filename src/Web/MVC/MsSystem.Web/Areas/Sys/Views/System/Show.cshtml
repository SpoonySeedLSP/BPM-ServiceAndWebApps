@{
    Layout = "~/Views/Shared/_LayoutContent.cshtml";
}
@section scripts{
    <script>seajs.use("@Url.Content("/src/sys/system/js/show.js")");</script>
}
<div class="show-content" id="msapp" v-cloak>
    <div class="row p5">
        @await Component.InvokeAsync("Menu", true)
    </div>
    <div class="row">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <form class="form-horizontal m-t" id="form-system">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">系统名称</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control required" name="SystemName" v-model="SysSystem.SystemName" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">系统备注</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" v-model="SysSystem.Memo" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">系统排序</label>
                        <div class="col-sm-8">
                            <input type="number" class="form-control" v-model="SysSystem.Sort" />
                        </div>
                    </div>
                    <div class="form-group" v-if="SysSystem.SystemId > 0">
                        <label class="col-sm-3 control-label">系统编码</label>
                        <div class="col-sm-8">
                            <label class="control-label">{{SysSystem.SystemCode}}</label>
                        </div>
                    </div>
                    <div class="form-group" v-if="SysSystem.SystemId > 0">
                        <label class="col-sm-3 control-label">创建时间</label>
                        <div class="col-sm-8">
                            <label class="control-label">{{SysSystem.CreateTime|unixToDateFormat}}</label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">状态</label>
                        <div class="col-sm-8">
                            <input type="checkbox" v-model="SysSystem.IsDel" v-bind:true-value="0" v-bind:false-value="1">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>